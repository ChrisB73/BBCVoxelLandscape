{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "BeebVSC Build Target 'voxel.ssd'",
            "type": "shell",
            "problemMatcher": {
                "owner": "6502",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "command": "BeebAsm",
            "args": [
                "-i",
                "voxasm.asm",
                "-do",
                "voxel.ssd",
                "-opt",
                "2",
                "-title",
                "Voxel"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "BeebVSC Test Target",
            "type": "shell",
            "command": "BeebEm.exe",
            "args": [
                "voxel.ssd"
            ],
            "osx": {
                "command": "open",
                "args": [
                    "-a",
                    "b2 Debug",
                    "voxel.ssd"
                ]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Build binary file for testing",
            "type": "shell",
            "problemMatcher": {
                "owner": "6502",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            },
            "command": "BeebAsm",
            "args": [
                "-i",
                "voxasm.asm",
                "-dd",
                "-labels",
                "labels.txt",
                "-v"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}